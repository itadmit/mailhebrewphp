{
    "name": "mailhebrew/mail-service",
    "description": "מערכת דיוור עצמאית בעברית",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "phpmailer/phpmailer": "^6.8",
        "vlucas/phpdotenv": "^5.5",
        "predis/predis": "^2.1",
        "monolog/monolog": "^3.4",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "respect/validation": "^2.2",
        "ramsey/uuid": "^4.7",
        "guzzlehttp/guzzle": "^7.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "MailHebrew\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MailHebrew\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyze",
        "cs": "phpcs"
    },
    "license": "MIT"
} 